<mamelayout version="2">

<!-- define elements -->

	<element name="digit" defstate="0">
		<led7seg><color red="1.0" green="0.1" blue="0.15" /></led7seg>
	</element>

	<element name="led" defstate="0">
		<rect>
			<bounds x="-2" y="-2" width="5" height="5" />
			<color alpha="0" />
		</rect>
		<disk state="0">
			<color red="0.1" green="0.01" blue="0.015" />
			<bounds x="0" y="0" width="1" height="1" />
		</disk>
		<disk state="1">
			<color red="0.5" green="0.05" blue="0.075" />
			<bounds x="0" y="0" width="1" height="1" />
		</disk>
		<disk state="2">
			<color red="1.0" green="0.1" blue="0.15" />
			<bounds x="0" y="0" width="1" height="1" />
		</disk>
	</element>


<!-- digits -->

	<group name="digits">
		<bounds x="0" y="0" width="9" height="1" />

		<element name="digit0" ref="digit"><bounds x="0" y="0" width="1" height="1" /></element>
		<element name="digit1" ref="digit"><bounds x="2" y="0" width="1" height="1" /></element>
		<element name="digit2" ref="digit"><bounds x="6" y="0" width="1" height="1" /></element>
		<element name="digit3" ref="digit"><bounds x="8" y="0" width="1" height="1" /></element>
	</group>


