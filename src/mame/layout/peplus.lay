			<bounds x="20" y="10" width="300" height="20" />
		</element>
		<element name="pe_bnkb1" ref="dealspinstart">
			<bounds x="10" y="280" width="74" height="20" />
		</element>
		<element name="pe_bnkb4" ref="bet1">
			<bounds x="92" y="280" width="74" height="20" />
