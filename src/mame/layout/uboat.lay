<mamelayout version="2">

	<view name="Screen (Destroyer Side)">
		<!-- workaround for MAME selecting a 2-screen view by default -->
		<screen index="1"><bounds x="0" y="0" width="~scr1width~" height="~scr1height~" /><color alpha="0" /></screen>
		<screen index="0"><bounds x="0" y="0" width="~scr0width~" height="~scr0height~" /></screen>
	</view>

	<view name="Screen (Submarine Side)">
		<screen index="1"><bounds x="0" y="0" width="~scr1width~" height="~scr1height~" /></screen>
	</view>

	<view name="Left-to-Right">
		<!-- this view is actually impossible on the real thing -->
		<screen index="0"><bounds x="-~scr0width~" y="0" width="~scr0width~" height="~scr0height~" /></screen>
		<screen index="1"><bounds x="5" y="0" width="~scr1width~" height="~scr1height~" /></screen>
	</view>

</mamelayout>
